<!DOCTYPE html>
<html lang="en">

<%- include('partials/head')  %>

<body>
  <%- include('partials/header') %>
  <main>
    <h2>ðŸ”Ž Search...</h2>
    <form class="searchform" method="get" action="/search">
      <label for="characterName">Name:</label>
      <input type="text" id="characterName" name="characterName" value="<%= locals.searchTerm %>">
      <button type="submit">Let's Go!</button>
    </form>
    <div class="searchresults">
      <% for (const character of charactersFilteredByName) {%>
        <div class="charcard">
          <div class="charcard-header">
            <h3><%= character.name %></h3>
            <div class="charsheet-img">
              <img src="<%= character.picture %>" alt="picture of <%- character.name %>">
            </div>
          </div>
          <div class="charcard-body">
            <button class="charcard-btn" type="button">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
              </svg>
            </button>
            <p>Category: <%- character.category %></p>
            <%- include('partials/charSheetBody', {character: character})  %>
          </div>
        </div>
      <% } %>
    </div>
  </main>
</body>

</html>